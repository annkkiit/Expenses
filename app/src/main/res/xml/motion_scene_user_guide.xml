<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/mid"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/indicator_current"
                motion:framePosition="38"
                android:scaleX="1.8"
                android:alpha="0.7"/>
            <KeyPosition
                motion:motionTarget="@id/guideText2"
                motion:framePosition="38"
                motion:keyPositionType="parentRelative"
                motion:percentX="0.75"
                motion:percentY="0.78"/>
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"/>
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/mid"
        motion:constraintSetEnd="@+id/end"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/indicator_current"
                motion:framePosition="64"
                android:scaleX="1.8"
                android:alpha="0.7"/>
            <KeyPosition
                motion:motionTarget="@id/guideText3"
                motion:framePosition="68"
                motion:keyPositionType="parentRelative"
                motion:percentX="0.75"
                motion:percentY="0.78"/>
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"/>
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/guideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:motionProgress="0.13"/>
        <Constraint
            android:id="@id/guideButton"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:alpha="0"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Constraint
            android:id="@id/indicator_current"
            android:layout_width="36dp"
            android:layout_height="8dp"
            android:scaleX="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="108dp"
            app:layout_constraintHorizontal_bias="0.25"/>
        <!-- text -->
        <Constraint
            android:id="@id/guideText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp"/>
        <Constraint
            android:id="@id/guideText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="100dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="86dp"
            android:alpha="0"/>
        <Constraint
            android:id="@id/guideText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="100dp"
            android:layout_marginBottom="86dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/mid">
        <Constraint
            android:id="@id/guideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:motionProgress="0.45"/>
        <Constraint
            android:id="@id/guideButton"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:alpha="0"
            android:translationY="100dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Constraint
            android:id="@id/indicator_current"
            android:layout_width="36dp"
            android:layout_height="8dp"
            android:scaleX="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="108dp"
            app:layout_constraintHorizontal_bias="0.5"/>
        <!-- text-->
        <Constraint
            android:id="@id/guideText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="86dp"
            android:translationX="-100dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@id/guideText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp"/>
        <Constraint
            android:id="@id/guideText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="100dp"
            android:layout_marginBottom="86dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:alpha="0"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/guideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:motionProgress="1"/>
        <Constraint
            android:id="@id/guideButton"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:alpha="1"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Constraint
            android:id="@id/indicator_current"
            android:layout_width="36dp"
            android:layout_height="8dp"
            android:scaleX="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="108dp"
            app:layout_constraintHorizontal_bias="0.75"/>

        <!-- text-->
        <Constraint
            android:id="@id/guideText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="-100dp"
            android:layout_marginBottom="86dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@id/guideText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="-100dp"
            android:layout_marginBottom="86dp"
            android:scaleX="0.42"
            android:scaleY="0.42"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@id/guideText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="148dp"
            android:alpha="1"/>
    </ConstraintSet>

</MotionScene>